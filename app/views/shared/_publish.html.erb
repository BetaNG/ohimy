						<br>
						<input type="hidden" name="pub_pic" value="">
						<input type="button" value="从电脑中选择图片..." class="pps1_btn r5">
						<%= form.file_field :attachment, :class=>'tfile' %>
					<% end %>
				</div>
			</div>
			<em class="word_count"><i>0</i>/140</em>
		</div>
	</div>
	<ul class="pub_img" style="display: none"></ul>
	<div class="clear">
	</div>
